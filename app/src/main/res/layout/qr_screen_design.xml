<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/closeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/ic_baseline_cancel_exit"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/head_loog"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/closeImage"
            android:layout_centerHorizontal="true"
            app:loadLogoImage="@{com.fintech.superadmin.util.Constants.LogoUrl}"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="@string/todo" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/head_loog"
            android:layout_centerHorizontal="true"
            android:id="@+id/qr_image"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/qr_image"
            android:src="@drawable/my_upis"
            />
    </RelativeLayout>
</layout>