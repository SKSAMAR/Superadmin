<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/credit_card_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="12dp"
            app:contentPadding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_payment_mode"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_18sdp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sagnika"
                        android:id="@+id/title"/>

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_cancel_exit" />

                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/pay_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/imps"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:id="@+id/imps"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/neft"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:id="@+id/neft"
                        />
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amount_layout"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/amount"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:importantForAutofill="no"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:text="@string/charges_for_settlement_is_rs_10_for_imps_neft"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:id="@+id/sendAmountUser"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_amount"
                    android:textAllCaps="false"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</layout>