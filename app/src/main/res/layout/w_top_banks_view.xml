<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/linearState"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/curve_rect_gray"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_topBanks"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:scaleType="centerInside"
            android:src="@drawable/statebankof" />

        <TextView
            android:id="@+id/textBankState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/sagnika"
            android:gravity="center"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_toEndOf="@+id/linearState" />
</RelativeLayout>