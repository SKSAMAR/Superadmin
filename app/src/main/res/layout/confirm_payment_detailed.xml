<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dmtViewModel"
            type="com.fintech.webspidysoftware.viewmodel.ToBankViewModel"/>
        <variable
            name="commData"
            type="com.fintech.webspidysoftware.data.network.responses.CommissionResponse" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="0.5dp"
        app:contentPadding="2sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_15sdp"
                >

                <RelativeLayout
                    android:id="@+id/head_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/app_logo_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@mipmap/ic_launcher" />
                    <TextView
                        android:id="@+id/appName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/app_logo_image"
                        android:text="@string/app_name"
                        android:fontFamily="@font/sagnika"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        tools:ignore="SmallSp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/detail_data_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_below="@id/head_section"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_number"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:hint="@string/name"
                            android:text="@={dmtViewModel.selectedBeneficiaryModel.name}"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/amount"
                        android:text="@{`â‚¹ `+dmtViewModel.amount}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_22sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@string/a_c_no"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@={dmtViewModel.selectedBeneficiaryModel.accno}"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@string/ifsc"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@={dmtViewModel.selectedBeneficiaryModel.ifsc}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@string/mode"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@={dmtViewModel.transType}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@string/beneficiary_"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@={dmtViewModel.selectedBeneficiaryModel.bene_id}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@string/sender_s_wallet"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@={dmtViewModel.globalSelectedMobile}"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/__slashes"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gst_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_below="@id/detail_data_section">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/amount"
                        android:text="@{`â‚¹ `+commData.charge}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/t_charges_from_customer_n_inc_of_applicable_gst"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_below="@id/detail_data_section">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_adhikari_cost"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/amount"
                        android:text="@{`â‚¹ `+commData.charge_commission}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tds_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_below="@id/gst_app">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/amount"
                        android:text="@{`â‚¹ `+commData.commission}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adhikari_commission_n_subject_to_app_tds_5"/>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tpin_layout"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_m_pin_"
                    android:layout_below="@id/tds_app">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="15dp"
                        android:maxLines="1"
                        android:importantForAutofill="no"
                        android:id="@+id/mPinEdit"/>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_below="@id/tpin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="3dp"
                    app:contentPaddingTop="10sp"
                    app:contentPaddingBottom="10sp"
                    app:contentPaddingLeft="25sp"
                    app:contentPaddingRight="25sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:cardBackgroundColor="#EDEDED"
                    android:id="@+id/cancel_it"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/cancel"
                            android:textColor="#888383"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_below="@id/tpin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="2dp"
                    app:contentPaddingTop="10sp"
                    app:contentPaddingBottom="10sp"
                    app:contentPaddingLeft="25sp"
                    app:contentPaddingRight="25sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_4sdp"
                    app:cardBackgroundColor="@color/mainBlue"
                    android:id="@+id/confirm_it"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/confirm_send_amount"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_below="@+id/confirm_it"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="vertical"/>

            </RelativeLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>
</layout>