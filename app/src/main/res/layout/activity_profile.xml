<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profileViewModel"
            type="com.fintech.petoindia.viewmodel.ProfileViewModel" />

        <variable
            name="nameNumber"
            type="com.fintech.petoindia.data.db.entities.User" />

        <variable
            name="userProfile"
            type="com.fintech.petoindia.data.db.entities.UserProfile" />

    </data>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.profile.ProfileActivity">
        <include
            layout="@layout/profile_top_toolbar"
            android:id="@+id/toolbar"/>

        <RelativeLayout
            android:id="@+id/picture_sections"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/toolbar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                app:civ_border_width="0.7dp" />

            <at.markushi.ui.CircleButton
                android:id="@+id/onChangePicture"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:cb_color="@color/iconColor" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/picture_sections"
            android:layout_below="@id/toolbar"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <info.androidhive.fontawesome.FontTextView
                android:text="@={nameNumber.mobile}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                android:textSize="18sp"/>

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                android:textSize="14sp"/>

<!--            <info.androidhive.fontawesome.FontTextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                android:onClick="@{profileViewModel::onEditDetails}"-->
<!--                android:paddingTop="8dp"-->
<!--                android:paddingEnd="8dp"-->
<!--                android:paddingBottom="8dp"-->
<!--                android:text="@string/edit_details"-->
<!--                android:textColor="@color/iconColor"-->
<!--                android:textSize="10sp"-->
<!--                tools:ignore="RtlSymmetry,SmallSp" />-->





        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listRecycler"
            android:clipToPadding="false"
            android:padding="16dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_below="@id/picture_sections" />

    </RelativeLayout>

</layout>