<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.fintech.superadmin.viewmodel.MobileRechargeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        tools:context=".activities.bbps.fragments.SelectionOfBiller">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:id="@+id/card_root_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/categoryContainer"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:onClick="@{viewModel::fetchBbpsCategory}"
                                android:id="@+id/category_bbps"
                                android:hint="@string/category"
                                android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:inputType="text"
                                android:importantForAutofill="no"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:padding="15dp"
                                android:editable="false"
                                tools:ignore="Deprecated" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:onClick="@{viewModel::fetchBbpsOperators}"
                            android:id="@+id/operator_bbps"
                            android:hint="@string/operator"
                            android:text="@{viewModel.selectedBBPS.RESPONSE.billerInfoResponse.biller.billerName}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                            android:maxLines="1"
                            android:inputType="text"
                            android:importantForAutofill="no"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:padding="15dp"
                            android:editable="false"
                            tools:ignore="Deprecated" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <RelativeLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:onClick="@{viewModel::proceedToFetchBillBBPS}"
                                android:id="@+id/proceed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:text="@string/proceed_"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/spacer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="vertical"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</layout>