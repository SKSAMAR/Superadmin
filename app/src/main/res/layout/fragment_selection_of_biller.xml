<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.fintech.webspidysoftware.viewmodel.MobileRechargeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        tools:context=".activities.bbps.fragments.SelectionOfBiller">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:id="@+id/card_root_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/category"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textStyle="bold"
                            android:textColor="@color/iconColor"/>
                        <EditText
                            android:onClick="@{viewModel::fetchBbpsCategory}"
                            android:id="@+id/category_bbps"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:scrollbars="horizontal"
                            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:hint="@string/category"/>
                    </LinearLayout>

                    <EditText
                        android:onClick="@{viewModel::fetchBbpsOperators}"
                        android:id="@+id/operator_bbps"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.selectedBBPS.name}"
                        android:maxLines="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:scrollbars="horizontal"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:hint="@string/operator"/>

                    <EditText
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:hint="@string/amount"/>


                    <RelativeLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:onClick="@{viewModel::proceedToFetchBillBBPS}"
                                android:id="@+id/proceed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:text="@string/proceed_"/>

                            <Button
                                android:id="@+id/cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/iconColor"
                                android:text="@string/cancel_"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/spacer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:orientation="vertical"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</layout>