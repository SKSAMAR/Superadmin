<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="wholeInfoModel"
            type="com.fintech.paytoindia.data.network.responses.BeneficiaryHistoryResponse" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenBackground"
        tools:context=".activities.tobank.DetailedHistoryScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0.5dp"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reference_id"
                        android:fontFamily="@font/sagnika"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@={wholeInfoModel.reference_id}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sagnika"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/copyReferenceId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/sagnika"
                            android:padding="10dp"
                            android:text="@string/copy"
                            android:textColor="@color/iconColor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0.5dp"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paid_to"
                        android:fontFamily="@font/sagnika"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/beneficiary_image"
                            android:layout_width="45sp"
                            android:layout_height="45sp"
                            android:layout_margin="8sp"
                            android:src="@drawable/ic_bank"
                            android:contentDescription="@string/todo" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/beneficiary_image">

                            <LinearLayout
                                android:id="@+id/beneficiary_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8sp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/beneficiary_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="1sp"
                                    android:fontFamily="@font/sagnika"
                                    android:text="@{wholeInfoModel.data.benename}"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/beneficiary_account_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="1sp"
                                    android:fontFamily="@font/sagnika"
                                    android:text="@{wholeInfoModel.data.account_number}"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rupee_sign"
                                android:textColor="@color/iconColor"
                                android:textSize="12sp"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/amount"
                                tools:ignore="RelativeOverlap" />

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:layout_centerVertical="true"
                                android:text="@{wholeInfoModel.data.txn_amount}"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                        </RelativeLayout>

<!--                        <TextView-->
<!--                            android:id="@+id/sendAgainText"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_below="@id/beneficiary_image"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:text="@string/send_again"-->
<!--                            android:layout_margin="10dp"-->
<!--                            android:textColor="@color/iconColor" />-->



                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0.5dp"
                app:contentPadding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message"
                        android:fontFamily="@font/sagnika"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@={wholeInfoModel.data.remarks}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sagnika"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

</layout>