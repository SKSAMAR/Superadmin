<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/optionsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="-10sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0.5dp"
            app:contentPadding="2sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/history_layout"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/view_history"
                        android:textColor="@color/iconColor"
                        android:textSize="24sp"
                        android:fontFamily="@font/sagnika"
                        android:id="@+id/view_history"/>

                    <View
                        android:id="@+id/beneficiaryDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="?android:attr/listDivider" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/share_layout"
                    >

                    <TextView
                        android:id="@+id/penny_drop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/sagnika"
                        android:text="@string/verify_account"
                        android:textAlignment="center"
                        android:textColor="@color/iconColor"
                        android:textSize="24sp"/>

                    <View
                        android:id="@+id/beneficiaryDivider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="?android:attr/listDivider" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/remove_layout"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/remove"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="24sp"
                        android:fontFamily="@font/sagnika"
                        android:id="@+id/remove"/>

                </RelativeLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cancel_card"
            android:layout_below="@+id/optionsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0.5dp"
            app:contentPadding="2sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/cancel_layout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/cancel"
                    android:textColor="@color/iconColor"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:fontFamily="@font/sagnika"
                    android:id="@+id/cancel"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>